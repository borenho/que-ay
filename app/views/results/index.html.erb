<table class="ui celled table">
  <thead>
    <tr>
      <th colspan='3'>Results for <%= current_user.email %></th>
    </tr>
    <tr>
      <th>Question</th>
      <th>Answer</th>
      <th>Score</th>
      <th>Correct?</th>
    </tr>
    <tbody>
      <% @results.each do |result| %>
        <% if result.answer_is_correct %>
          <tr class='positive'>
            <td><%= result.answer.question_body %></td>
            <td><%= result.answer_body %></td>
            <td><%= result.answer_points %></td>
            <td><i class="icon checkmark"></td>
          </tr>
        <% else %>
          <tr class='negative'>
            <td><%= result.answer.question_body %></td>
            <td><%= result.answer_body %> (Correct answer = "<%= result.correct_answer.body %>")</td>
            <td><%= result.answer_points %></td>
            <td><i class="icon close"></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </thead>
</table>
